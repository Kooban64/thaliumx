# QuantLib Service Environment Configuration
# ThaliumX QuantLib Service - Handles quantitative finance and risk calculations

# Service Configuration
NODE_ENV=development
PORT=3009
SERVICE_NAME=quantlib-svc

# Database Configuration
DATABASE_URL=postgresql://thaliumx_user:thaliumx@postgres:5432/thaliumx
DB_HOST=postgres
DB_PORT=5432
DB_NAME=thaliumx
DB_USER=thaliumx_user
DB_PASSWORD=thaliumx

# Redis Configuration
REDIS_URL=redis://:thaliumx@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=thaliumx

# Kafka Configuration
KAFKA_BROKERS=kafka-1:9092,kafka-2:9092,kafka-3:9092
KAFKA_CLIENT_ID=quantlib-service
KAFKA_GROUP_ID=quantlib-service-group

# Authentication & Security
JWT_SECRET=thaliumx_jwt_secret_key_2024_development_secure_256bit_production_ready
JWT_REFRESH_SECRET=thaliumx_jwt_refresh_secret_key_2024_development_secure_256bit_production_ready
SESSION_SECRET=thaliumx_session_secret_key_2024_development_secure_256bit_production_ready

# Keycloak Configuration
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=thaliumx
KEYCLOAK_CLIENT_ID=quantlib-service
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# QuantLib Configuration
QUANTLIB_CALCULATION_ENGINE=advanced
QUANTLIB_PRECISION=8
QUANTLIB_MAX_ITERATIONS=1000

# Risk Models
VALUE_AT_RISK_ENABLED=true
EXPECTED_SHORTFALL_ENABLED=true
STRESS_TESTING_ENABLED=true
SCENARIO_ANALYSIS_ENABLED=true

# Portfolio Analytics
PORTFOLIO_OPTIMIZATION_ENABLED=true
RISK_PARITY_ENABLED=true
BLACK_LITTERMAN_ENABLED=true

# Derivatives Pricing
OPTION_PRICING_ENABLED=true
SWAP_PRICING_ENABLED=true
CDS_PRICING_ENABLED=true

# Market Data
MARKET_DATA_UPDATE_INTERVAL=60
VOLATILITY_SURFACE_ENABLED=true
CORRELATION_MATRIX_ENABLED=true

# Monte Carlo Simulation
MONTE_CARLO_ENABLED=true
MONTE_CARLO_ITERATIONS=10000
MONTE_CARLO_CONVERGENCE_THRESHOLD=0.001

# Risk Metrics
VAR_CONFIDENCE_LEVEL=0.95
VAR_TIME_HORIZON=1
ES_CONFIDENCE_LEVEL=0.975

# Monitoring & Logging
LOG_LEVEL=info
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=300
CACHE_ENABLED=true

# External APIs
BLOOMBERG_API_KEY=your-bloomberg-api-key
REFINITIV_API_KEY=your-refinitiv-api-key
MARKET_DATA_API_KEY=your-market-data-api-key

# Notification Settings
SLACK_WEBHOOK_URL=your-slack-webhook-url
PAGERDUTY_API_KEY=your-pagerduty-api-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Calculation Settings
NUMERICAL_PRECISION=1e-10
MAX_CALCULATION_TIME=30
PARALLEL_PROCESSING_ENABLED=true

# Regulatory Compliance
REGULATORY_REPORTING_ENABLED=true
BASEL_COMPLIANCE_ENABLED=true
IFRS_9_COMPLIANCE_ENABLED=true