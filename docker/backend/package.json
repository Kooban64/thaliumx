{
  "name": "@thaliumx/backend",
  "version": "1.0.0",
  "description": "ThaliumX Exchange Backend Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "test:performance": "artillery run tests/performance/load-test.yml",
    "test:security": "pnpm run test:security:api && pnpm run test:security:dependencies",
    "test:security:api": "node tests/security/api-security-test.js",
    "test:security:dependencies": "pnpm audit --audit-level high",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "ts-node src/migrations/runner.ts up",
    "migrate:rollback": "ts-node src/migrations/runner.ts down",
    "test:staging": "STAGING_URL=${STAGING_URL:-http://localhost:3002} ts-node scripts/staging-smoke-tests.ts",
    "db:seed": "ts-node scripts/database-seeder.ts",
    "db:backup": "ts-node scripts/database-backup.ts",
    "db:restore": "ts-node scripts/database-restore.ts",
    "monitoring:setup": "ts-node scripts/monitoring-setup.ts",
    "clean": "rm -rf dist coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@thaliumx/shared": "file:./shared",
    "@open-policy-agent/opa-wasm": "^1.10.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.53.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.57.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.57.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.57.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.57.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/resources": "^1.30.0",
    "@opentelemetry/sdk-metrics": "^1.30.0",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.4",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dompurify": "^3.3.0",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "jsdom": "^27.2.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "keycloak-connect": "^26.0.7",
    "knex": "^3.1.0",
    "mongoose": "^8.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.0.1",
    "nodemailer": "^6.9.16",
    "opossum": "^9.0.0",
    "otplib": "^12.0.1",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.0",
    "sequelize": "^6.37.5",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "stripe": "^17.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.4.0",
    "uuid": "^10.0.0",
    "web3": "^4.16.0",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.2.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/minimatch": "^6.0.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "artillery": "^2.0.22",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
